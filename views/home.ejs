    <div class="flex md:flex-row-reverse flex-wrap">
		
      <!--Main Content-->
          <div class="w-full md:w-4/5 bg-gray-100">
             <div class="container bg-gray-100 pt-16 px-6">

              <% if (user) { %>
                <div class="flex justify-center md:justify-end">
                  <a href="/logout" class="text-red-500 border-red-500 md:border-2 hover:bg-red-500 hover:text-white transition ease-out duration-500 font-bold py-2 px-4 rounded-full m-4 ml-0">Log out</a>
                  <p class="text-red-500 ml-2 border-red-500 md:border-2 hover:bg-red-500 hover:text-white transition ease-out duration-500 font-bold py-2 px-4 rounded-full m-4 ml-0">Welcome <%= user.email %></p>
                </div>
              <% } else { %>
                <div class="flex justify-center md:justify-end">
                  <a href="/login" class="text-red-500 border-red-500 md:border-2 hover:bg-red-500 hover:text-white transition ease-out duration-500 font-bold py-2 px-4 rounded-full m-4 ml-0">Log in</a>
                  <a href="/signup" class="text-red-500 ml-2 border-red-500 md:border-2 hover:bg-red-500 hover:text-white transition ease-out duration-500 font-bold py-2 px-4 rounded-full m-4 ml-0">Sign up</a>
                </div>
              <% } %>
              <section class="text-gray-700 body-font">
                <div class="container px-5 py-24 mx-auto">
                  <div class="flex flex-wrap w-full mb-20">
                    <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
                      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">Course-tip </h1>
                      <div class="h-1 w-20 bg-indigo-500 rounded"></div>
                    </div>
                    <p class="lg:w-1/2 w-full leading-relaxed text-base">A course review website for the users and by the users. Ask for reviews for any course, you can think of this website as the stackoverflow for reviews.
                    </p>
                    <a href="/askforreview">
                      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full m-4 ml-0">
                        Ask for review!
                      </button>
                    </a>
                  </div>
                  <div class="flex flex-wrap -m-4">

                    <% if(courses.length > 0) { %>
                      <% courses.forEach(course => { %>

                        <div class="w-auto p-4 hover:shadow-md rounded-lg cursor-pointer h-full">
                          <div class="bg-gray-100 p-6 rounded-lg">
                            <h3 class="tracking-widest text-indigo-500 text-xl font-bold title-font m-4 ml-0">
                              <%= course.name %>
                            </h3>
                            <h2 class="text-lg text-gray-900 font-medium title-font mb-4">Descirption: </h2>
                            <p class="leading-relaxed text-base">
                              <%= course.description %>
                            </p>
                            <!-- <a href="#" ></a>  md:w-1/2-->
                              <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full m-4 ml-0 ">
                                Reviews
                              </button>
                              
                            <div class="xl:w-full flex flex-wrap overflow-auto h-64" id="reviewssection" >
                              
                                <% course.reviews.forEach(review => { %>
                                  <div class="xl:w-1/3 md:w-1/2 p-4">
                                    <div class="border border-gray-300 p-6 rounded-lg">
                                      <div class="w-10 h-10 inline-flex items-center justify-center rounded-full bg-indigo-100 text-indigo-500 mb-4">
                                        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-6 h-6" viewBox="0 0 24 24">
                                          <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"></path>
                                          <circle cx="12" cy="7" r="4"></circle>
                                        </svg>
                                      </div>
                                      <h2 class="text-lg text-gray-900 font-medium title-font mb-2">User</h2>
                                      <p class="leading-relaxed text-base"><%= review.review %></p>
                                    </div>
                                  </div>
                                  <% }); %>
                                
                              
                              <section class="fixed bottom-0 right-0">
                                <form class="flex w-full" method="POST" action="/addreview">
                                  <div class="mb-12 pt-3 mr-2 ml-2 rounded bg-gray-200">
                                    <label class="inline-flex text-gray-700 text-sm font-bold mb-2 ml-3">Course name</label>
                                    <input type="text" name="courseName" class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3" required>
                                  </div>
                                  <div class="mb-12 pt-3 rounded bg-gray-200">
                                      <label class="inline-flex text-gray-700 text-sm font-bold mb-2 ml-3">write a review</label>
                                      <input type="text" name="courseReview" class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3" required>
                                  </div>
                                  <button class="mb-12 mx-3 bg-purple-600 hover:bg-purple-700 text-white font-bold rounded shadow-lg hover:shadow-xl transition duration-200 px-3 py-3 h-auto" type="submit">Add</button>
                                </form>
                              </section>
                            </div>
                          </div>
                        </div>

                        <% }); %>
                    <% } %>
